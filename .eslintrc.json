{
  "env": {
    "browser": true,
    "jquery": true
  },
  "extends": ["standard", "plugin:react/recommended"],
  "globals": {
    "gettext": true,
    "pgettext": true
  },
  "plugins": ["react"],
  "parser": "babel-eslint",
  "rules": {
    "semi": ["error", "always"],
    "space-before-function-paren": "off",
    "indent": ["error", 4]
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "15.0"
    }
  }
}
